pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                dir('petpal') {
                    bat 'node --version'
                    bat 'npm --version'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('petpal') {
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }
        
        stage('Run Docker') {
            steps {
                dir('petpal') {
                    bat "docker build -t petpal:%BUILD_NUMBER% ."
                    bat "docker run -d -p 3000:80 --name petpal-%BUILD_NUMBER% petpal:%BUILD_NUMBER%"
                    sleep 30
                }
            }
        }
        
        stage('Smoke Test') {
            steps {
                dir('petpal') {
                    bat 'bash smoke-test.sh'
                }
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                dir('petpal') {
                    archiveArtifacts artifacts: 'build/**/*'
                }
            }
        }
    }
    
    post {
        always {
            dir('petpal') {
                bat "docker stop petpal-%BUILD_NUMBER% || echo Container not found"
                bat "docker rm petpal-%BUILD_NUMBER% || echo Container not found"
            }
        }
    }
}