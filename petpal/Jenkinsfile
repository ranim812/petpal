pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                dir('petpal') {
                    bat 'node --version'
                    bat 'npm --version'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('petpal') {
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }
        
        stage('Run Docker') {
            steps {
                dir('petpal') {
                    bat "docker build -t petpal:%BUILD_NUMBER% ."
                    bat "docker run -d -p 3000:80 --name petpal-%BUILD_NUMBER% petpal:%BUILD_NUMBER%"
                    sleep 30
                }
            }
        }
        
        stage('Smoke Test') {
            steps {
                dir('petpal') {
                    bat '''
                    echo "üß™ Running smoke tests..."
                    if exist dist (
                        echo "‚úÖ dist directory exists"
                    ) else (
                        echo "‚ùå dist directory missing!" && exit 1
                    )
                    if exist dist\\index.html (
                        echo "‚úÖ index.html exists"
                    ) else (
                        echo "‚ùå index.html missing!" && exit 1
                    )
                    echo "üéâ All smoke tests passed!"
                    '''
                }
    }
}
        
        stage('Archive Artifacts') {
            steps {
                dir('petpal') {
                    archiveArtifacts artifacts: 'dist/**/*'
                    archiveArtifacts artifacts: 'Dockerfile'
                    archiveArtifacts artifacts: 'smoke-test.sh'
                    }
                }
            }
    }
    
    post {
        always {
            dir('petpal') {
                bat "docker stop petpal-%BUILD_NUMBER% || echo Container not found"
                bat "docker rm petpal-%BUILD_NUMBER% || echo Container not found"
            }
        }
    }
}